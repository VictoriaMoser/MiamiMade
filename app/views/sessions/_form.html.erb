<div class="row">
  <div class="col-sm-12 col-md-4 col-md-offset-4">

    <%= form_tag '/login', html: {class: "login-form"}  do %>

    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <br>
    <%= submit_tag "Login", class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
